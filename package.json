{
  "name": "@posey.ai/posey",
  "version": "1.0.0-beta.1",
  "description": "Monorepo for the Posey AI project",
  "author": "Posey Labs <code@posey.ai>",
  "license": "AGPL-3.0",
  "main": "null",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "helm": "bash ./helm/scripts/helm-with-env.sh --action install",
    "rehelm": "bash ./helm/scripts/helm-with-env.sh --action upgrade",
    "unhelm": "bash ./helm/scripts/helm-with-env.sh --action uninstall",
    "helm:debug": "bash ./helm/scripts/helm-with-env.sh --action install --env-files ./services/.env,./data/.env,./apps/www/.env --values ./helm/posey/values.yaml --chart ./helm/posey",
    "helmport": "bash ./helm/scripts/port-forward.sh --core",
    "helmport:all": "bash ./helm/scripts/port-forward.sh --all",
    "helmport:db": "bash ./helm/scripts/port-forward.sh --db",
    "helmport:monitoring": "bash ./helm/scripts/port-forward.sh --monitoring",
    "helmport:mcp": "bash ./helm/scripts/port-forward.sh --service=mcp",
    "helmport:auth": "bash ./helm/scripts/port-forward.sh --service=auth",
    "helmport:voyager": "bash ./helm/scripts/port-forward.sh --service=voyager",
    "helmport:grafana": "bash ./helm/scripts/port-forward.sh --service=grafana",
    "docker:build-push": "./scripts/build-push-services.sh",
    "docker:build-push:tag": "turbo docker:build-push --tag=$1",
    "docker:direct": "./scripts/docker-build-push.sh",
    "docker:direct:tag": "./scripts/docker-build-push.sh"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "19.1.0",
    "@nx/js": "20.4.2",
    "@nx/node": "^20.4.2",
    "@nx/workspace": "^20.4.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nx": "20.4.2",
    "prettier": "^3.5.0",
    "turbo": "^2.4.4"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posey-ai/posey.git"
  },
  "bugs": {
    "url": "https://github.com/posey-ai/posey/issues"
  },
  "homepage": "https://github.com/posey-ai/posey#readme",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "apps/*",
    "data",
    "packages/*",
    "services/*",
    "services"
  ]
}
